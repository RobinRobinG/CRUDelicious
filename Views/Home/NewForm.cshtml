@model CRUDelicious_Entity.Models.Dish;
@{
    ViewData["Title"] = "Add a new Dish";
}
<div class="wrapper">
    <div class="header">
        <h1>Let's add a new dish!</h1>
    </div>
    <a href="/">Home</a>
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Chef" class="control-label"></label>
            <input type="text" asp-for="Chef" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Tastiness" class="control-label"></label>
            <input type="number" asp-for="Tastiness" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Calories" class="control-label"></label>
            <input type="number"  asp-for="Calories" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea type="text" asp-for="Description" class="form-control"></textarea>
        </div>
        <input type="submit" />
    </form>

</div>